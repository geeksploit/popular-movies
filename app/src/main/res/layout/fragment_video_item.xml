<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/video_item_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_medium"
        android:layout_marginStart="@dimen/size_medium"
        android:contentDescription="@string/description_video_play"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/video_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_medium"
        android:layout_weight="1"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="@tools:sample/lorem" />

    <ImageButton
        android:id="@+id/video_item_share"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_video_share"
        android:padding="@dimen/size_medium"
        android:src="@android:drawable/ic_menu_share"
        android:tint="@color/colorPrimary" />

</LinearLayout>
